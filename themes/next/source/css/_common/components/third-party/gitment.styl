#gitment-display-button{
    display: inline-block;
    padding: 0 15px;
    color: #0a9caf;
    cursor: pointer;
    font-size: 14px;
    border: 1px solid #0a9caf;
    border-radius: 4px;
}
#gitment-display-button:hover{
    color: #fff;
    background: #0a9caf;
}
.gitment-editor-avatar .gitment-github-icon{
    background-color: #2abaf2 !important;
    &:hover {
        color: #0593d3 !important;
        border-bottom-color: #0593d3 !important;
        background-color: #0593d3 !important;
    }
}
.gitment-editor-submit {
    &:hover {
        color: white !important;
        border-bottom-color: #0593d3 !important;
        background-color: #0593d3 !important;
    }
}
.gitment-footer-container, .gitment-editor-footer-tip {
    display: none !important;
}
.gitment-container a:hover {
    text-decoration: none !important;
}
.gitment-header-issue-link, .gitment-editor-login-link {
    color: #2abaf2 !important;
    &:hover {
        color: #0593d3 !important;
        border-bottom-color: #0593d3 !important;
    }
}